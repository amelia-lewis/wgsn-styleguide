mixin carousel-slide(img, category, title, date, author)
  .swiper-slide
    .swiper-slide--img: img(src=img)
    .swiper-slide--text
      p.swiper-slide--category= category
      h2.swiper-slide--title= title
      p.swiper-slide--info
        span= date
        if date && author
          span &nbsp;&nbsp;/&nbsp;&nbsp;By 
        span= author

