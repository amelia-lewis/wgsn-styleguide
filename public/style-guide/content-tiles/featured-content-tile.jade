mixin content-tile--featured(img, category, title, description, date, author)
  a.content-tile--featured(href="")
    .content-tile--img
      img(src=img)
    p.content-tile--category= category
    .content-tile--text
      h2.content-tile--title= title
      if description
        p.content-tile--description= description
      p.content-tile--info
        span= date
        if date && author
          span &nbsp;&nbsp;/&nbsp;&nbsp;By 
        span= author

section#section-featured-content-tile
  h2.inline-block Featured Content Tile
