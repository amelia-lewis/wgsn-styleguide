include ../../partials/github-link

mixin colour-block(id, colour)
  .colour-block.border.text-center(id=id)
    .block-lg.border-bottom.text-white(style="background-color: #" + colour)
      p
        span #
        span= colour
    .block-xs
      code @
        span= id

section#section-colours
  h2.inline-block Colours
  +github-link("vars")

  p Variables for those product colours you all know and love.

  .card
    .row
      .col-xs-6.col-sm-8.block-bot-md: +colour-block("wgsn", "0000DD")
    
    .row
      .col-xs-6.col-sm-4.block-bot-md: +colour-block("insight", "9B59B6")
      .col-xs-6.col-sm-4.block-bot-md: +colour-block("fashion", "FE484F")
      .col-xs-6.col-sm-4.block-bot-md: +colour-block("li", "00B697")
      .col-xs-6.col-sm-4.block-bot-md: +colour-block("instock", "3E97F1")
      .col-xs-6.col-sm-4.block-bot-md: +colour-block("styletrial", "FFC430")
      .col-xs-6.col-sm-4.block-bot-md: +colour-block("mindset", "231F20")

  p ...and some handy, dandy greys.
    
  .card
    .row
      .col-xs-6.col-sm-4.block-bot-md: +colour-block("xlt-grey", "F2F2F2")
