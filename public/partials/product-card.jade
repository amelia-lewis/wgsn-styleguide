mixin product-card(id, pantone, rgb, cmyk, hex, hasdownloads)
  //- .product-card(class!=attributes.class style="background-image: url('/downloads/png-sm/wgsn-" + id + ".png')")
  .card.product-card.wow.fadeIn(class!=attributes.class)
    if hasdownloads
      .block-bot-md: img(src="/downloads/png-sm/wgsn-" + id + ".png" height="30" alt="wgsn " + id)
    else  
      h1= id
    
    .info
      .block.product-colors
        h3 Colour  
          span.instructions.serif.text-lowercase.text-grey.text-italic.text-normal click to copy
        if pantone
          button.btn-white.clipboard(data-clipboard-text=pantone) Pantone 
            span= pantone
        button.btn-white.clipboard(data-clipboard-text=rgb) RGB(
          span= rgb
          | )
        if cmyk
          button.btn-white.clipboard(data-clipboard-text=rgb) CMYK(
            span= cmyk
            | )
        button.btn-white.clipboard(data-clipboard-text=hex) HEX #
          span= hex

      if hasdownloads
        .block-top-md.product-logos
          h3 Logo  
            span.instructions.serif.text-lowercase.text-grey.text-italic.text-normal click to download
          a.btn.btn-white(href="/downloads/png-sm/wgsn-" + id + ".png" download="wgsn-" + id) PNG (sm)
          a.btn.btn-white(href="/downloads/png-lg/wgsn-" + id + ".png" download="wgsn-" + id) PNG (lg)
          a.btn.btn-white(href="/downloads/svg/wgsn-" + id + ".svg" download="wgsn-" + id) SVG